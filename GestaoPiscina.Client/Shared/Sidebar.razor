 <aside class="w-64 bg-slate-900 p-6 hidden md:flex flex-col min-h-screen border-r border-slate-800">
    <div class="flex items-center text-2xl font-bold mb-10 text-cyan-400 tracking-wide">
        <span class="w-7 h-7 rounded-md bg-gradient-to-tr from-cyan-500 to-blue-400 mr-3 shadow-lg"></span>
        Gestão de Piscinas
    </div>
    <nav class="flex flex-col gap-1">
        @foreach (var item in menuItems)
        {
            <NavLink href="@item.Href" class="flex items-center px-3 py-2 rounded-lg text-slate-300 hover:bg-slate-700 hover:text-white transition-colors duration-150 font-medium text-base"
                    ActiveClass="bg-cyan-600 text-white font-semibold shadow-lg"
                    Match="@(item.Href == "/" ? NavLinkMatch.All : NavLinkMatch.Prefix)">
                <i class="fas @item.Icon text-lg mr-2"></i><span>@item.Label</span>
            </NavLink>
        }
    </nav>
</aside>

@code {
    private record MenuItem(string Href, string Icon, string Label);

    private List<MenuItem> menuItems = new()
    {
        new("/","fa-tachometer-alt","Dashboard"),
        new("clientes","fa-user-friends","Clientes"),
        new("piscinas","fa-water","Piscinas"),
        new("produtos","fa-box","Produtos"),
        new("equipamentos","fa-robot","Equipamentos"),
        new("ordens-servico","fa-tasks","Ordens de Serviço"),
        new("rotas","fa-route","Gestão de Rota"),
        new("reagendamentos","fa-calendar-alt","Reagendamentos"),
        new("relatorios","fa-chart-line","Relatórios"),
        new("supervisao","fa-star","Supervisão"),
        new("estoque","fa-warehouse","Estoque"),
        new("configuracoes","fa-cogs","Configurações"),
    };
}
