@page "/estoque"
@using GestaoPiscina.Client.Services
@using GestaoPiscina.Client.Models
@inject ApiService ApiService

<section class="p-4 space-y-6">
    <h3 class="text-xl font-bold mb-4">Gestão de Estoque</h3>

    <div class="mb-4 flex justify-between items-center">
        <button class="bg-cyan-600 hover:bg-cyan-500 px-4 py-2 rounded-lg text-white transition-colors">
            <i class="fas fa-plus mr-2"></i>Nova Entrada
        </button>
    </div>

    <div class="flex space-x-2 mb-4">
        <input type="text" placeholder="Buscar produtos..." class="bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-slate-100">
        <select class="bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-slate-100">
            <option value="">Todos os Clientes</option>
            <option value="cliente1">João Silva</option>
            <option value="cliente2">Maria Santos</option>
        </select>
    </div>

    <div class="bg-slate-800 rounded-xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-700">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Cliente</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Produto</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Quantidade</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Última Atualização</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-300 uppercase tracking-wider">Ações</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-700">
                    <tr class="hover:bg-slate-700">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-slate-100">João Silva</div>
                            <div class="text-sm text-slate-400">Residencial</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-slate-100">Cloro Granulado</div>
                            <div class="text-sm text-slate-400">Químico</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">25 unidades</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">15/01/2024</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                Normal
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <button class="text-cyan-400 hover:text-cyan-300 mr-3">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="text-blue-400 hover:text-blue-300 mr-3">
                                <i class="fas fa-history"></i>
                            </button>
                            <button class="text-red-400 hover:text-red-300">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    <tr class="hover:bg-slate-700">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-slate-100">Maria Santos</div>
                            <div class="text-sm text-slate-400">Comercial</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-slate-100">Bomba de Filtro</div>
                            <div class="text-sm text-slate-400">Equipamento</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">2 unidades</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">14/01/2024</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                Baixo
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <button class="text-cyan-400 hover:text-cyan-300 mr-3">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="text-blue-400 hover:text-blue-300 mr-3">
                                <i class="fas fa-history"></i>
                            </button>
                            <button class="text-red-400 hover:text-red-300">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section> 